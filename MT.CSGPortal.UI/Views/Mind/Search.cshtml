@{
    ViewBag.Title = "Search";
}
<!-- Left -->

<div class="container-left">
    <div class="col-sm-2">

        <div class="bs-example">
            <div class="list-group">
                <a href="/Mind/Search" class="list-group-item active">
                    Search
                </a>
                <a href="/Mind/SyncDetails" class="list-group-item">
                    Synchronise
                </a>
                <a href="/Mind/AddArchitect" class="list-group-item">
                    AddArchitect
                </a>
            </div>
        </div>

    </div>
</div>

<!-- Center -->
<div class="container-center">
    <div class="col-sm-7" id="ng-app" ng-app="searchresult" ng-controller="Search">
        <h2>Manage Minds</h2>
        <script src="~/Scripts/architectsearch.js" type="text/javascript"></script>
        <!-- Search input container -->
        <div class="well col-sm-12">
            <form class="bs-example" name="architectSearch">
                <div class="form-inline">
                    Search in: <select ng-model="searchOption" ng-options="s.Name for s in searchOptions"></select>
                    <div class="input-group">
                        <input name="query" type="text" class="form-control" placeholder={{searchOption.PlaceHolder}} ng-model="searchstring" ng-required="true" ng-pattern="/^[0-9a-z ]{3,25}$/i" autofocus>
                        <span class="input-group-btn">
                            @*<button class="btn btn-default" ng-click="startLoading()">Search</button><button class="btn btn-default" type="submit" ng-click="startLoading()">Search</button>*@
                            <input class="btn btn-default" type="submit" value="Search" ng-click="startLoading()" />
                        </span>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="input-group-sm">
                        <span ng-show="architectSearch.query.$error.pattern" class="validation-summary-errors">
                            Must be alphanumeric in 3-25 characters!
                        </span>
                    </div>
                </div>
            </form>
        </div>

        <div class="clearfix"></div>

        <!-- Results container -->

        <div class="panel-group col-sm-12" id="accordion" when-scrolled="loadMore()">
            <!-- Result : Repeat using ng-repeat -->
            <div class="loadingmain">
                <img src="~/Images/mainloader.gif" />
            </div>
            <div class="panel panel-default" ng-repeat="i in items track by i.Mid">
                @RenderPage("./ArchitectProfile.cshtml")
            </div>
            <div id="loadingImg">
                <img src="~/Images/fadingblocks.gif" />
            </div>
            <div id="searchStatus"></div>
        </div>
        
    </div>
</div>

<!-- Right -->
<div class="container-right">
    <div class="col-sm-3">
        <div class="well">
           Active Minds in the portal: @ViewBag.ArchitectCount
        </div>

        <div class="well">
            Some more sample div content!
        </div>




        <div class="list-group">
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">List item 1</h4>
                <p class="list-group-item-text">Donec id elit non mi porta gravida at eget metus.</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">List item 2</h4>
                <p class="list-group-item-text">Maecenas sed diam eget risus varius blandit.</p>
            </a>
        </div>

        <div class="well">
            More and more div content!
        </div>


        <div class="bs-example" style="margin-bottom: 40px;">
            <span class="label label-default">Tag1</span>
            <span class="label label-primary">Tag2</span>
            <span class="label label-success">Tag3</span>
