            </div>
        </div>

    </div>
</div>

<!-- Center -->
<div class="container-center">
    <div class="col-sm-7">
        <h2>Update Mind Details</h2>
        <div class="well">
            @using (Ajax.BeginForm("SyncDBAjax", "Mind", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "responseMsgs", LoadingElementId = "submitforminprogress", OnComplete = "HideFormMessage" }, new { @class = "bs-example form-horizontal" }))
            {

                <div id="responseMsgs">
                </div>
                <div id="submitforminprogress" class="loadingmain formsubmit">
                    <img src="~/Images/mainloader.gif" />
                </div>
                <fieldset>
                    <legend>Important!</legend>
                    <p style="text-align:justify">
                        This operation cannot be undone. Synchronising the database will update all Mind's details with the information from Active Directory. Only professional summary, experience and contact information which is not available in Active Directory will remain unchanged.
                    </p>
                    <p style="text-align:justify">
                        This operation may take a few minutes to complete. 
                    </p>
                    <input type="submit" class="btn btn-primary" value="Sync Database" onclick="EmptyFormMessage()" />
                </fieldset>
            }
        </div>
    </div>
</div>

