<!-- Left -->

<div class="container-left">
    <div class="col-sm-2">

        <div class="bs-example">
            <div class="list-group">
                <a href="/Mind/Search" class="list-group-item">
                    Search
                </a>
                <a href="/Mind/SyncDetails" class="list-group-item active">
                    Synchronise
                </a>
                <a href="/Mind/AddArchitect" class="list-group-item">
